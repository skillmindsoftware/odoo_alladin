<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_form_custom" model="ir.ui.view">
        <field name="name">stock.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
               
                <field name="purchase_order_id"  widget="product_list_widget"/>
                
                <button name="fetch_purchase_order_data" type="object" string="Fetch PO Data" class="btn btn-primary btn-sm"/>
            </xpath>
        </field>
    </record>
   
</odoo>

