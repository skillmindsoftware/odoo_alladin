<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-right-align')]" position="before">
            <div class="pos-receipt-center-align" style="text-align: center; font-weight: bold; margin: 10px 0;">
                <span>Total Quantity: </span>
                <span t-esc="totalQuantity" />
            </div>
        </xpath>
    </t>
</templates>
