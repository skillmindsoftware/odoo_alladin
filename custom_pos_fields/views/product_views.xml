<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_discount" model="ir.ui.view">
        <field name="name">product.template.form.inherit.discount</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <label for="discount_rate"/>
                <div class="o_row">
                    <field name="discount_rate"/>
                    <span>%</span>
                </div>
            </xpath>
        </field>
    </record>

    <record id="product_normal_form_view_inherit_discount" model="ir.ui.view">
        <field name="name">product.product.form.inherit.discount</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <label for="discount_rate"/>
                <div class="o_row">
                    <field name="discount_rate"/>
                    <span>%</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>